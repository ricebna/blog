{
    "title": "Swap Backslash to vertical line",
    "rules": [{
        "description": "Swap Backslash to vertical line",
        "manipulators": [{
            "type": "basic",
            "from": {
                "key_code": "backslash"
            },
            "to": [{
                "key_code": "backslash",
                "modifiers": ["shift"]
            }]
        }, {
            "type": "basic",
            "from": {
                "key_code": "backslash",
                "modifiers": {
                    "mandatory": ["shift"],
                    "optional": ["any"]
                }
            },
            "to": [{
                "key_code": "backslash"
            }]
        }]
    }]
}